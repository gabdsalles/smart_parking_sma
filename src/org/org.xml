<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet href="http://moise.sourceforge.net/xml/os.xsl" type="text/xsl" ?>

<organisational-specification
    id="parking"
    os-version="0.8"
    xmlns='http://moise.sourceforge.net/os'
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:schemaLocation='http://moise.sourceforge.net/os
                        http://moise.sourceforge.net/xml/os.xsd'>

  <structural-specification>
    <role-definitions>
      <role id="r_dono"/>
      <role id="r_gerente"/>
      <role id="r_motorista"/>
    </role-definitions>

    <group-specification id="estacionamento">
      <roles>
        <role id="r_dono" min="1" max="1"/>
        <role id="r_gerente" min="1" max="1"/>
      </roles>

      <links>
        <link from="r_dono" to="r_gerente" type="authority"     scope="intra-group"/>
        <link from="r_gerente" to="r_dono" type="communication" scope="intra-group"/>
      </links>
    </group-specification>

    <group-specification id="clientes">
      <roles>
        <role id="r_motorista" min="1" max="10"/>
      </roles>
    </group-specification>
  </structural-specification>

  <functional-specification>
    <scheme id="scheme_funcionarios">
      <goal id="analisarProposta">
        <plan operator="sequence">
          <goal id="decisaoProposta"    ttf="6 seconds" ds="description decisaoProposta"/>
        </plan>
      </goal>

      <mission id="mission1" min="1" max="1">
        <role id="r_dono"/>
      </mission>
      <mission id="mission2" min="1" max="1">
        <role id="r_gerente"/>
      </mission>
    </scheme>

    <scheme id="scheme_clientes">
      <goal id="estacionar">
        <plan operator="sequence">
          <goal id="fazerProposta"    ttf="3 seconds" ds="description fazerProposta"/>
          <goal id="analisarResposta"/>
        </plan>
      </goal>

      <mission id="mission1" min="1" max="10">
        <role id="r_motorista"/>
      </mission>
    </scheme>
  </functional-specification>

  <normative-specification>
    <norm id="norm1" type="obligation" role="r_dono" mission="mission1"/>
    <norm id="norm2" type="obligation" role="r_gerente" mission="mission2"/>
    <norm id="norm3" type="obligation" role="r_motorista" mission="mission1"/>
  </normative-specification>

</organisational-specification>
